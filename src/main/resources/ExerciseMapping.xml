<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">

<mapping>
	<class name="com.abuabdul.castor.exercise.model.Exercise">
		<map-to xml="Exercise" />

		<field name="exerciseId" type="int">
			<bind-xml name="id" node="attribute" />
		</field>

		<field name="exerciseName" type="string">
			<bind-xml name="name" node="element" />
		</field>

		<field name="exerciseDesc" type="string">
			<bind-xml name="description" node="element" />
		</field>

		<field name="exerciseDate" type="date">
			<bind-xml name="date" node="element" />
		</field>
	</class>
</mapping>